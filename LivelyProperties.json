{
  "useImg": {
    "text": "use image as background",
    "type": "checkbox",
    "value": false
  },

  "imgPath": {
    "type": "folderDropdown",
    "value": "background.png",
    "text": "Image/Gif",
    "filter": "*.jpg|*.png|*.gif",
    "folder": "images"
  },

  "useVideo": {
    "text": "use video as background",
    "type": "checkbox",
    "value": true
  },

  "videoPath": {
    "type": "folderDropdown",
    "value": "background.mp4",
    "text": "Video",
    "filter": "*.mp4|*.webm|*.mkv|*.mov",
    "folder": "video"
  },

  "showVisualizer": {
    "text": "show visualizer",
    "type": "checkbox",
    "value": true
  },

  "color1": {
    "text": "starting color",
    "type": "color",
    "value": "#ffd66b"
  },

  "color2": {
    "text": "finish color",
    "type": "color",
    "value": "#ff8b2b"
  },

  "opacity": {
    "max": 100,
    "min": 0,
    "tick": 25,
    "step": 1,
    "text": "spectrum opacity",
    "type": "slider",
    "value": 100
  },

  "amplitude": {
    "max": 1000,
    "min": 100,
    "tick": 25,
    "step": 10,
    "text": "bar height",
    "type": "slider",
    "value": 300
  },

